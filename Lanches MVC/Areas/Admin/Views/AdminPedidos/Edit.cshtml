@model Lanches_MVC.Models.Pedido

@{
    ViewData["Title"] = "Editar Pedido";
}

<div class="container my-5">

    <h2 class="text-orange mb-4">✏️ Editar Pedido</h2>

    <div class="card bg-dark text-light shadow rounded p-4">

        <form asp-action="Edit">

            <h4 class="text-orange mb-3">Informações do Pedido</h4>
            <hr class="border-orange" />

            <input type="hidden" asp-for="PedidoId" />

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row">

                <div class="mb-3 col-md-6">
                    <label asp-for="Nome" class="form-label text-light"></label>
                    <input asp-for="Nome" class="form-control bg-dark text-light border-orange" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="mb-3 col-md-6">
                    <label asp-for="Sobrenome" class="form-label text-light"></label>
                    <input asp-for="Sobrenome" class="form-control bg-dark text-light border-orange" />
                    <span asp-validation-for="Sobrenome" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Endereco1" class="form-label text-light"></label>
                    <input asp-for="Endereco1" class="form-control bg-dark text-light border-orange" />
                    <span asp-validation-for="Endereco1" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Endereco2" class="form-label text-light"></label>
                    <input asp-for="Endereco2" class="form-control bg-dark text-light border-orange" />
                    <span asp-validation-for="Endereco2" class="text-danger"></span>
                </div>

                <div class="mb-3 col-md-6">
                    <label asp-for="Cep" class="form-label text-light"></label>
                    <input asp-for="Cep" class="form-control bg-dark text-light border-orange" />
                    <span asp-validation-for="Cep" class="text-danger"></span>
                </div>

                <div class="mb-3 col-md-6">
                    <label asp-for="Estado" class="form-label text-light"></label>
                    <input asp-for="Estado" class="form-control bg-dark text-light border-orange" />
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>

                <div class="mb-3 col-md-6">
                    <label asp-for="Cidade" class="form-label text-light"></label>
                    <input asp-for="Cidade" class="form-control bg-dark text-light border-orange" />
                    <span asp-validation-for="Cidade" class="text-danger"></span>
                </div>

                <div class="mb-3 col-md-6">
                    <label asp-for="Telefone" class="form-label text-light"></label>
                    <input asp-for="Telefone" class="form-control bg-dark text-light border-orange" />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>

                <div class="mb-3 col-md-6">
                    <label asp-for="Email" class="form-label text-light"></label>
                    <input asp-for="Email" class="form-control bg-dark text-light border-orange" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3 col-md-6">
                    <label asp-for="PedidoEnviado" class="form-label text-light"></label>
                    <input asp-for="PedidoEnviado" class="form-control bg-dark text-light border-orange" />
                    <span asp-validation-for="PedidoEnviado" class="text-danger"></span>
                </div>

                <div class="mb-3 col-md-6">
                    <label asp-for="PedidoEntregueEm" class="form-label text-light"></label>
                    <input asp-for="PedidoEntregueEm" class="form-control bg-dark text-light border-orange" />
                    <span asp-validation-for="PedidoEntregueEm" class="text-danger"></span>
                </div>

            </div>

            <hr class="border-orange my-4" />

            <div class="d-flex justify-content-between">
                <a asp-action="Index"
                   class="btn btn-outline-light">
                    ⬅ Voltar
                </a>

                <button type="submit" class="btn btn-orange btn-lg">
                    💾 Salvar Alterações
                </button>
            </div>

        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
