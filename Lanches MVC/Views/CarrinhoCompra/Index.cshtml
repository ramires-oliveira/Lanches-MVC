@model CarrinhoCompraViewModel

<div class="container my-4">
    <h2 class="text-center mb-4 text-orange">🛒 Meu Carrinho</h2>

    <div class="table-responsive">
        <table class="table table-dark table-hover align-middle">
            <thead class="table-header">
                <tr>
                    <th scope="col">Imagem</th>
                    <th scope="col">Lanche</th>
                    <th scope="col">Descrição</th>
                    <th scope="col">Quantidade</th>
                    <th scope="col">Preço Unitário</th>
                    <th scope="col">Total</th>
                    <th scope="col" class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.CarrinhoCompra.CarrinhoCompraItens.Any())
                {
                    @foreach (var item in Model.CarrinhoCompra.CarrinhoCompraItens)
                    {
                        <tr>
                            <td>
                                <img src="@item.Lanche.ImagemUrl" alt="@item.Lanche.Nome"
                             class="img-thumbnail" style="width: 80px; height: 60px; object-fit: cover;">
                            </td>
                            <td class="text-orange fw-bold">@item.Lanche.Nome</td>
                            <td class="text-muted small">@item.Lanche.DescricaoCurta</td>
                            <td class="text-center align-middle">
                                <div class="d-flex justify-content-center align-items-center">
                                    <a asp-controller="CarrinhoCompra" asp-action="DiminuirQuantidadeCarrinhoCompra" asp-route-carrinhoCompraItemId="@item.CarrinhoCompraItemId" class="btn btn-outline-orange btn-sm mx-1">−</a>
                                    <span class="fw-bold">@item.Quantidade</span>
                                    <a asp-controller="CarrinhoCompra" asp-action="AdicionarQuantidadeCarrinhoCompra" asp-route-carrinhoCompraItemId="@item.CarrinhoCompraItemId" class="btn btn-outline-orange btn-sm mx-1">+</a>
                                </div>
                            </td>

                            <td>@item.Lanche.Preco.ToString("c")</td>
                            <td><strong class="text-orange">@((item.Quantidade * item.Lanche.Preco).ToString("c"))</strong></td>
                            <td class="text-center">
                                <div class="d-inline">
                                    <a asp-controller="CarrinhoCompra" asp-action="RemoverItemCarrinhoCompra" asp-route-CarrinhoCompraItemId="@item.CarrinhoCompraItemId" class="btn btn-outline-orange btn-sm">
                                        ❌ Remover
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center">
                            Nenhum item no carrinho.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <a href="#" onclick="window.history.back(); return false;" class="btn btn-outline-orange btn-lg">@(Model.CarrinhoCompra.CarrinhoCompraItens.Any() ? "Continuar Comprando" : "Voltar")</a>
        <a asp-controller="Pedido" asp-action="Checkout" asp-route-lancheId="@Model.CarrinhoCompra" class="btn btn-orange btn-lg">Finalizar Compra</a>
    </div>
</div>