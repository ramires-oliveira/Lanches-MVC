@model Pedido

<div class="container my-5">
    <h2 class="text-center mb-4 text-orange">🧾 Finalizar Pedido</h2>

    <div class="row justify-content-center">
        <div class="col-lg-8">

            <form asp-action="Checkout" method="post" class="bg-dark p-4 rounded shadow-sm">
                <h4 class="text-orange mb-3">Informações do Cliente</h4>

                <div class="row">
                    <div class="mb-3 col-md-6">
                        <label asp-for="Nome" class="form-label text-light"></label>
                        <input asp-for="Nome" class="form-control bg-dark text-light border-orange" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="mb-3 col-md-6">
                        <label asp-for="Sobrenome" class="form-label text-light"></label>
                        <input asp-for="Sobrenome" class="form-control bg-dark text-light border-orange" />
                        <span asp-validation-for="Sobrenome" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Endereco1" class="form-label text-light"></label>
                    <input asp-for="Endereco1" class="form-control bg-dark text-light border-orange" />
                    <span asp-validation-for="Endereco1" class="text-danger"></span>
                </div>

                <div class="mb-3 col-md-4">
                    <label asp-for="Cep" class="form-label text-light"></label>
                    <input asp-for="Cep" id="cep" class="form-control bg-dark text-light border-orange" data-mask="cep" placeholder="00000-000" />
                    <span asp-validation-for="Cep" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="mb-3 col-md-6">
                        <label asp-for="Cidade" class="form-label text-light"></label>
                        <input asp-for="Cidade" class="form-control bg-dark text-light border-orange" />
                        <span asp-validation-for="Cidade" class="text-danger"></span>
                    </div>
                    <div class="mb-3 col-md-6">
                        <label asp-for="Estado" class="form-label text-light"></label>
                        <input asp-for="Estado" class="form-control bg-dark text-light border-orange" maxlength="2" placeholder="UF" />
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="mb-3 col-md-6">
                        <label asp-for="Email" class="form-label text-light"></label>
                        <input asp-for="Email" type="email" class="form-control bg-dark text-light border-orange" placeholder="exemplo@email.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3 col-md-6">
                        <label asp-for="Telefone" class="form-label text-light"></label>
                        <input asp-for="Telefone" id="telefone" class="form-control bg-dark text-light border-orange" data-mask="phone" />
                        <span asp-validation-for="Telefone" class="text-danger"></span>
                    </div>
                </div>

                <hr class="border-orange my-4" />

                <div class="d-flex justify-content-between align-items-center">
                    <a asp-controller="CarrinhoCompra" asp-action="Index" class="btn btn-outline-orange">
                        🛒 Voltar ao Carrinho
                    </a>
                    <button type="submit" class="btn btn-orange btn-lg">
                        💳 Finalizar Pedido
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
