@model LoginViewModel

<div class="container my-5 d-flex justify-content-center align-items-center" style="min-height: 75vh;">
    <div class="card bg-dark text-light shadow-lg p-4" style="max-width: 420px; width: 100%; border-radius: 15px;">
        <h2 class="text-center mb-4 text-orange">🔐 Login</h2>

        <form asp-action="Login" method="post">
            <input type="hidden" asp-for="RetornoUrl" />
            <div class="mb-3">
                <label asp-for="Email" class="form-label text-light"></label>
                <input asp-for="Email" class="form-control bg-dark text-light border-orange" placeholder="exemplo@email.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Senha" class="form-label text-light"></label>
                <input asp-for="Senha" class="form-control bg-dark text-light border-orange" placeholder="••••••••" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div asp-validation-summary="All" class="alert alert-danger text-center p-2" role="alert"></div>
            }

            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-orange btn-lg">Entrar</button>
            </div>

            <div class="text-center">
                <p class="small text-muted">
                    Esqueceu sua senha? <a href="#" class="text-orange text-decoration-none">Recuperar</a>
                </p>
                <p class="small text-muted">
                    Ainda não tem conta? <a asp-controller="Account" asp-action="Registro" class="text-orange text-decoration-none">Cadastre-se</a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
